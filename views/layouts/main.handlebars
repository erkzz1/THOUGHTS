<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Thougths</title>
    <link rel='shortcut icon' href='/img/favicon.ico' type='image/x-icon' />
    <link rel='stylesheet' href='/css/styles.css' />
    <!-- Bootstrap CSS -->
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css'
    />
  </head>
  <body>
    <nav id='navbar'>
      <a href='/' id='logo'>
        <img src='/img/toughts_logo.png' alt='Thoughts' />
        <ul>
          <li><a href='/'>Pensamentos</a></li>
          <!-- URLS após autenticação -->
          {{#if session.userid}}
            <li><a href='/thoughts/dashboard'>Dashboard</a></li>
            <li><a href='/logout'>Sair</a></li>
          {{else}}
            <li><a href='/login'>Entrar</a></li>
            <li><a href='/register'>Registrar</a></li>
          {{/if}}
        </ul>
      </a>
    </nav>
    <div class='container'>
      <!-- Mensagens -->
      {{#if messages.message}}
        <div class='message'>
          {{messages.message}}
        </div>
      {{/if}}
      {{{body}}}
    </div>
    <script>
        setTimeout(() => {
        const flashMessage = document.querySelector('.message')
        if (flashMessage) {
        flashMessage.style.display = 'none'
      }
    }, 4000)
  </script>
    <footer>
      <p><span>Thoughts</span> &copy; 2025</p>
    </footer>
  </body>
</html>
